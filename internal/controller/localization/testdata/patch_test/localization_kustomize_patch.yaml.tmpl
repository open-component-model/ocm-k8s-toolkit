apiVersion: delivery.ocm.software/v1alpha1
kind: Localization
metadata:
  name: {{ .Name }}
  namespace: {{ .Namespace }}
spec:
  target:
    kind: Resource
    name: {{ .TargetResourceName }}
  source:
    kind: Resource
    name: {{ .SourceResourceName }}
    strategy:
      kustomizePatch:
        path: {{ .FilePath }}
        patches:
        - path: {{ .PatchPath }}